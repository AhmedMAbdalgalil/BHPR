{
  "name": "blockchain-healthcare-registry",
  "version": "1.0.0",
  "description": "Decentralized healthcare provider registry system on blockchain",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy": "hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "frontend": "cd frontend && npm start",
    "install-all": "npm install && cd frontend && npm install",
    "dev": "concurrently \"npm run compile\" \"npm run frontend\"",
    "lint": "eslint . --ext .js,.jsx,.sol",
    "format": "prettier --write \"**/*.{js,jsx,json,md,sol}\""
  },
  "keywords": [
    "blockchain",
    "healthcare",
    "ethereum",
    "smart-contracts",
    "decentralized",
    "registry"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "concurrently": "^8.0.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.40.0",
    "hardhat": "^2.26.3",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/blockchain-healthcare-registry.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/blockchain-healthcare-registry/issues"
  },
  "homepage": "https://github.com/yourusername/blockchain-healthcare-registry#readme",
  "directories": {
    "doc": "docs",
    "test": "test"
  }
}